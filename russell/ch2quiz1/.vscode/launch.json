{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            //"program": "/usr/bin/lldb",
            "program": "${workspaceRoot}/*.out",
            "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart",
